<div class="external_wedding_planner_form">
  <h1>To-dos</h1>
  <% if notice %>
      <p class="notification notice">
        <%= notice %>
      </p>
  <% end %>

  <% if alert %>
      <p class="notification alert">
        <%= alert %>
      </p>
  <% end %>

  <% if @todos.empty? %>
      <p>You haven't saved any to-dos yet.</p>
      <%= link_to 'New To-do', new_todo_path %>
      <br/>
      <br/>
      <br/>
      <br/>
      <br/>
  <% else %>
      <%= link_to 'New To-do', new_todo_path %>
      <h2>Things to do</h2>
      <table>
        <tr>
          <th class="description">Description</th>
          <th>Action</th>
          <th></th>
          <th></th>
        </tr>

        <% @todos_incomplete.each do |todo| %>
            <tr>
              <td class="description"><%= todo.description %></td>
              <td><%= link_to 'Edit', edit_todo_path(todo) %></td>
              <td><%= link_to 'Destroy', todo, method: :delete, data: {confirm: 'Are you sure?'} %></td>
            </tr>
        <% end %>
      </table>

      <br/>

      <h2>Things done</h2>
      <table>
        <tr>
          <th class="description">Description</th>
          <th>Action</th>
          <th></th>
          <th></th>
        </tr>

        <% @todos_completed.each do |todo| %>
            <tr>
              <td class="description"><%= todo.description %></td>
              <td><%= link_to 'Edit', edit_todo_path(todo) %></td>
              <td><%= link_to 'Destroy', todo, method: :delete, data: {confirm: 'Are you sure?'} %></td>
            </tr>
        <% end %>
      </table>
  <% end %>

</div>
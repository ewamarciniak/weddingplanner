<%= semantic_form_for (@order) do |f| %>
    <% if @order.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@order.errors.count, "error") %>
            prohibited this order from being saved:</h2>
          <ul>
            <% @order.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
  <%= f.inputs do %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :email %>
    <%= f.input :pay_type, :label =>"Payment type", :as=>:select, :collection =>[ "Check", "Credit card", "Purchase order" ], prompt: 'Select a payment method'%>
    <% end %>



    <%= f.actions do %>
    <%= f.action :submit, :as => :input %>
  <% end %>
<% end %>


<div class="wider"><h2>Your Cart</h2></div>
<table class="cart">

  <%= render(@cart.line_items) %>

  <tr class="total_line">
    <td colspan="3">Total</td>
    <td class="total_cell"><%= number_to_currency(cart.total_price, {:unit => "&euro;", :separator => ".", :delimiter => ","}) %></td>
  </tr>
</table>
<%= button_to "Checkout", new_order_path, method: :get %>
<%= button_to 'Empty cart', cart,  method: :delete,
              confirm: 'Are you sure?' %>
<div class="external_wedding_planner_form">
  <h1>Listing vendors</h1>
<%# START:notifications %>
  <% if notice %>
      <p class="notification notice">
        <%= notice %>
      </p>
  <% end %>

  <% if alert %>
      <p class="notification alert">
        <%= alert %>
      </p>
  <% end %>
<%# END:notifications %>
  <%= link_to 'New Vendor', new_vendor_path %>
  <br/>
  <br/>

  <div id="entire_table">
    <table>
      <tr class="row">
        <th>Login name</th>
        <th>Company</th>
        <th>Email</th>
        <th></th>
      </tr>
      <tr>
        <% @vendors.each do |vendor| %>
            <td class="list_description"><%= vendor.login_name %> </td>
            <td class="list_description"><%= vendor.company_name %> </td>
            <td class="list_description"><%= vendor.email %> </td>

            <td class="list_actions">
              <%= link_to 'Show', vendor %>
              <br/>
              <%= link_to 'Edit', edit_vendor_path(vendor) %>
              <br/>
              <%= link_to 'Destroy', vendor,
                          confirm: 'Are you sure?',
                          method: :delete %>
            </td>
            </tr>
        <% end %>
        </table>
    <br/>
  </div>
</div>
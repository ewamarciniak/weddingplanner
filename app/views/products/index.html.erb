<div class="external_wedding_planner_form">
  <h1>Products</h1>
  <br/>
  <%= link_to 'New product', new_product_path %>
  <br/>
  <br/>

  <div id="entire_table">
    <table>
      <tr>
        <th>User Id</th>
        <th>Product Id</th>
        <th>Image</th>
        <th>Title</th>
        <th>Price</th>
        <th>Issue</th>
        <th colspan="3">Actions</th>
      </tr>
      <% @products.each do |product| %>
          <tr class>
            <td class="list_description"><%= product.user.id unless product.user.nil? %></td>
            <td class="list_description"><%= product.id %></td>
            <td> <%= image_tag product.picture.url(:thumb) %></td>
            <td class="list_description"><%= product.title %></td>
            <td class="list_description"><%= number_to_currency(product.price, {:unit => "&euro;", :separator => ".", :delimiter => ","}) %>
            <td class="list_description"><%= product.issue %></td>
            <td class="list_actions">
              <%= link_to 'Show', product %></td>
            <td class="list_actions">
              <%= link_to 'Edit', edit_product_path(product) %></td>
            <td class="list_actions">
              <%= link_to 'Destroy', product,
                          confirm: 'Are you sure?',
                          method: :delete %>
            </td>
          </tr>
          <tr class="whitespace"></tr>
      <% end %>
    </table>
  </div>
</div>
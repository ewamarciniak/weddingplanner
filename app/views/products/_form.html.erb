<div class="wedding_planner_form">
  <% if notice %>
      <p class="notification notice">
        <%= notice %>
      </p>
  <% end %>

  <% if alert %>
      <p class="notification alert">
        <%= alert %>
      </p>
  <% end %>

  <%= semantic_form_for @product, :html => {:multipart => true} do |f| %>
      <%= f.inputs do %>
          <%= f.input :title %>
          <%= f.file_field :picture %>
          <%= f.input :price, :as => :string %>
          <%= f.input :issue %>
      <% end %>
      <%= f.actions do %>
          <%= f.action :submit %>
      <% end %>

  <% end %>
</div>